{
  "name": "rfc-239-plasmo-src-path",
  "displayName": "Rfc 239 plasmo src path",
  "version": "0.0.0",
  "description": "A basic Plasmo extension.",
  "author": "lgvic",
  "scripts": {
    "dev": "plasmo dev --src-path=src/extension",
    "build": "plasmo build --src-path=src/extension"
  },
  "dependencies": {
    "plasmo": "0.59.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.0",
    "@types/chrome": "0.0.202",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "prettier": "2.7.1",
    "typescript": "4.9.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs"
    ]
  }
}
